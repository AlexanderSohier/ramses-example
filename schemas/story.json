{
    "type": "object",
    "title": "Story schema",
    "$schema": "http://json-schema.org/draft-03/schema",
    "required": true,
    "properties": {
        "id": {
            "required": true,
            "type": "integer"
        },
        "name": {
            "required": true,
            "type": "string"
        },
        "completed": {
            "required": false,
            "type": "boolean"
        },
        "due_date": {
            "required": false,
            "type": "date"
        },
        "updated_at": {
            "required": false,
            "type": "date"
        },
        "creation_date": {
            "required": false,
            "type": "date"
        },
        "start_date": {
            "required": false,
            "type": "date"
        },
        "description": {
            "required": true,
            "type": "string"
        }
    }
}
