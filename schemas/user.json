{
    "type": "object",
    "title": "User schema",
    "$schema": "http://json-schema.org/draft-04/schema",
    "_auth_fields": ["username", "first_name", "last_name", "stories"],
    "_public_fields": ["username"],
    "_nested_relationships": ["profile"],
    "_auth_model": true,
    "required": ["username", "email", "password"],
    "properties": {
        "created_at": {
            "type": ["string", "null"],
            "format": "date-time",
            "_db_settings": {
                "_type": "datetime",
                "_default": "{{datetime.datetime.utcnow}}"
            }
        },
        "updated_at": {
            "type": ["string", "null"],
            "format": "date-time",
            "_db_settings": {
                "_type": "datetime",
                "_onupdate": "{{datetime.datetime.utcnow}}"
            }
        },
        "profile": {
            "type": ["integer", "string"],
            "_db_settings": {
                "_type": "relationship",
                "_document": "Profile",
                "_backref_name": "user",
                "_uselist": false
            }
        },
        "stories": {
            "type": ["array", "null"],
            "items": {
                "oneOf": [
                    {"type": "string"},
                    {"type": "integer"}
                ]
            },
            "_db_settings": {
                "_type": "relationship",
                "_document": "Story",
                "_ondelete": "NULLIFY",
                "_backref_name": "owner",
                "_backref_ondelete": "NULLIFY",
                "_foreign_keys": "Story.owner_id"
            }
        },
        "assigned_stories": {
            "type": ["array", "null"],
            "items": {
                "oneOf": [
                    {"type": "string"},
                    {"type": "integer"}
                ]
            },
            "_db_settings": {
                "_type": "relationship",
                "_document": "Story",
                "_ondelete": "NULLIFY",
                "_backref_name": "assignee",
                "_backref_ondelete": "NULLIFY",
                "_foreign_keys": "Story.assignee_id"
            }
        },
        "username": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "_db_settings": {
                "_type": "string",
                "_required": true,
                "_min_length": 1,
                "_max_length": 50,
                "_unique": true,
                "_primary_key": true,
                "_before_validation": ["lower_strip_processor"]
            }
        },
        "email": {
            "type": "string",
            "format": "email",
            "_db_settings": {
                "_type": "string",
                "_required": true,
                "_unique": true,
                "_before_validation": ["lower_strip_processor"]
            }
        },
        "password": {
            "type": "string",
            "minLength": 3,
            "_db_settings": {
                "_type": "string",
                "_required": true,
                "_min_length": 3,
                "_after_validation": ["crypt_processor"]
            }
        },
        "first_name": {
            "type": ["string", "null"],
            "maxLength": 50,
            "default": "",
            "_db_settings": {
                "_type": "string",
                "_max_length": 50,
                "_default": ""
            }
        },
        "last_name": {
            "type": ["string", "null"],
            "maxLength": 50,
            "default": "",
            "_db_settings": {
                "_type": "string",
                "_max_length": 50,
                "_default": ""
            }
        },
        "last_login": {
            "type": ["string", "null"],
            "format": "date-time",
            "_db_settings": {
                "_type": "datetime"
            }
        },
        "groups": {
            "type": ["array", "null"],
            "items": {
                "type": "string",
                "enum": ["admin", "user"]
            },
            "default": ["user"],
            "_db_settings": {
                "_type": "list",
                "_choices": ["admin", "user"],
                "_default": ["user"],
                "_item_type": "string"
            }
        },
        "status": {
            "type": ["string", "null"],
            "enum": ["active", "inactive", "blocked"],
            "default": "active",
            "_db_settings": {
                "_type": "choice",
                "_choices": ["active", "inactive", "blocked"],
                "_default": "active"
            }
        },
        "settings": {
            "type": ["object", "null"],
            "_db_settings": {
                "_type": "dict"
            }
        }
    }
}