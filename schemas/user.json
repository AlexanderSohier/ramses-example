{
    "type": "object",
    "title": "User schema",
    "$schema": "http://json-schema.org/draft-03/schema",
    "required": true,
    "properties": {
        "id": {
            "required": true,
            "type": "primary_key"
        },
        "stories": {
            "required": false,
            "type": "object",
            "args": {
                "document": "Story",
                "ondelete": "NULLIFY",
                "backref_name": "user",
                "backref_ondelete": "NULLIFY"
            }
        },
        "timestamp": {
            "required": false,
            "type": "datetime"
        },
        "username": {
            "required": true,
            "type": "string",
            "args": {
                "min_length": 1,
                "max_length": 50,
                "unique": true
            }
        },
        "email": {
            "required": true,
            "type": "string",
            "args": {
                "unique": true
            }
        },
        "password": {
            "required": true,
            "type": "string",
            "args": {
                "min_length": 3
            }
        },
        "first_name": {
            "required": false,
            "type": "string",
            "args": {
                "max_length": 50,
                "default": ""
            }
        },
        "last_name": {
            "required": false,
            "type": "string",
            "args": {
                "max_length": 50,
                "default": ""
            }
        },
        "last_login": {
            "required": false,
            "type": "string"
        },
        "group": {
            "required": false,
            "type": "choice",
            "args": {
                "choices": ["admin", "user"],
                "default": "user",
                "types_name": "user_group_types"
            }
        },
        "status": {
            "required": false,
            "type": "string",
            "args": {
                "choices": ["active", "inactive", "blocked"],
                "default": "active",
                "types_name": "user_status_types"
            }
        },
        "settings": {
            "required": false,
            "type": "dict"
        }
    }
}