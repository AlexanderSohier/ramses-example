{
    "type": "object",
    "title": "Profile schema",
    "$schema": "http://json-schema.org/draft-03/schema",
    "required": true,
    "properties": {
        "id": {
            "required": true,
            "type": "id_field",
            "args": {
                "primary_key": true
            }
        },
        "address": {
            "required": false,
            "type": "string"
        },
        "user_id": {
            "required": false,
            "type": "foreign_key",
            "args": {
                "ref_document": "User",
                "ref_column": "user.id",
                "ref_column_type": "id_field"
            }
        }
    }
}