{
    "type": "object",
    "title": "Profile schema",
    "$schema": "http://json-schema.org/draft-04/schema",
    "required": ["id", "created_at", "updated_at", "address", "user_id"],
    "properties": {
        "id": {
            "type": ["integer", "string"],
            "db_settings": {
                "type": "id_field",
                "primary_key": true,
                "required": false
            }
        },
        "created_at": {
            "type": ["string", "null"],
            "format": "date-time",
            "db_settings": {
                "type": "datetime",
                "default": "{{datetime.datetime.utcnow}}",
                "required": false
            }
        },
        "updated_at": {
            "type": ["string", "null"],
            "format": "date-time",
            "db_settings": {
                "type": "datetime",
                "onupdate": "{{datetime.datetime.utcnow}}",
                "required": false
            }
        },
        "address": {
            "type": ["string", "null"],
            "db_settings": {
                "type": "unicode_text",
                "required": false
            }
        },
        "user_id": {
            "type": ["string", "null"],
            "db_settings": {
                "type": "foreign_key",
                "ref_document": "User",
                "ref_column": "user.username",
                "ref_column_type": "string",
                "required": false
            }
        }
    }
}